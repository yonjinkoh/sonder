$(document).ready(function(){




  if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
    $('.category.slick-current').css('color', 'darkred');
    $('.category.slick-current').css('borderBottom', '8px solid darkred');

    $('.slider-nav').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      asNavFor: '.slider-for',
      dots: false,
      // centerMode: true,
      focusOnSelect: true,
    });
    $('.slider-for').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      asNavFor: '.slider-nav',
    });
  } else {

    $('.slider-nav').slick({
      slidesToShow: 4,
      accessibility: false,
      // slidesToScroll: 1,
      asNavFor: '.slider-for',
      dots: false,
      // swipeToSlide: true,
      // centerMode: true,
      focusOnSelect: true,
    });
    $('.slider-for').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      accessibility: false,
      adaptiveHeight: true,
      arrows: false,
      swipe: false,
      fade: true,
      asNavFor: '.slider-nav',
    });
  }
});
