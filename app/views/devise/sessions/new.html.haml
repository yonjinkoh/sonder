.profile-container
	.top-buffer
	%center.logo-header
		=image_tag("logo.png")
		.tagline your all-time favorite things, only
	.top-buffer
	.row
		.col-md-6
			%h2
				%center Log in
			= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
				.field
					= f.email_field :email, placeholder: "email", class: "custom-form-control", autofocus: true
				%br
					.field
					= f.password_field :password,placeholder: "password", class: 'custom-form-control', autocomplete: "off"
				- if devise_mapping.rememberable?
					.field
						= f.check_box :remember_me
						= f.label :remember_me
				%br
				%center.actions
					= f.submit "Log in →", class: "btn"
		.col-md-6{style: "border-left: 1px solid lightgray"}
			%h2
				%center Sign up
			= form_for(resource, class: "custom-form-control", as: resource_name, url: registration_path(resource_name)) do |f|
				= devise_error_messages!
				.field
					= f.email_field :email, placeholder: "email", class: "custom-form-control", autofocus: true
				%br
				.field
					%span mysimplist.com/
					%span= f.text_field :username,placeholder:"username", class: "small-span-form-control"
				%br
				.field
					- if @minimum_password_length
						%em
							(#{@minimum_password_length} characters minimum)
					= f.password_field :password,placeholder:"password", class: "custom-form-control", autocomplete: "off"
				%br
				.field
					= f.password_field :password_confirmation,placeholder: "confirm-password", class: "custom-form-control", autocomplete: "off"
				%br
				%center.actions
					= f.submit "Sign up →", class: "btn"
