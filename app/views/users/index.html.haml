%p#notice= notice
%h1 Listing Users
%table.table
  %thead
    %tr
      %th First name
      %th Last name
      %th Username
      %th Description
      %th Picture
      %th{:colspan => "3"}
  %tbody.table-hover
    - @users.each do |user|
      %tr
        %td= user.first_name
        %td= user.last_name
        %td= user.username
        %td= user.description
        %td{style: "max-width: 100px; overflow: hidden"}= user.picture
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
